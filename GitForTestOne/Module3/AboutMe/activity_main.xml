<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="myName"
            type="android.example.com.aboutme.MyName"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F4F4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:background="#662B8C"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="398dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_margin_aboutMe_Left"
                android:layout_marginTop="@dimen/small_margin_aboutMe"
                android:layout_weight="1"
                android:foregroundTint="#E0D6D6"
                android:text="@string/AppName"
                android:textColor="#F6F3F3"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/name_text"
            style="@style/Theme.AboutMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Robert Cedeno"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/nickname_edit"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:ems="10"
            android:hint="@string/what_is_your_nickname"
            android:inputType="text|textPersonName"
            android:textAlignment="center" />

        <Button
            android:id="@+id/done_buttton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shadowColor="#359B29"
            android:text="Done"
            android:textColor="#F6F6F6"
            android:textColorHighlight="#65E065"
            android:textColorHint="#A80000"
            android:textColorLink="#22F684"
            app:rippleColor="#993232"
            app:strokeColor="#2B905C" />

        <TextView
            android:id="@+id/nickname_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textAlignment="center"
            android:textSize="20sp"
            android:visibility="gone"
            android:text="@={myName.nickName}"/>

        <ImageView
            android:id="@+id/star_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/Star_top_Margin"
            android:contentDescription="@string/yellow_star"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <ScrollView
            android:id="@+id/bio_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/bio_text"
                style="@style/NameStile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:paddingStart="@dimen/Padding"
                android:text="@string/lorem_ipsum"
                android:visibility="visible"
                tools:text="@string/lorem_ipsum" />

        </ScrollView>

    </LinearLayout>
</layout>

